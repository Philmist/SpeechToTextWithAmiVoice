<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SpeechToTextWithAmiVoice.ViewModels;assembly=SpeechToTextWithAmiVoice"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="200"
        x:Class="SpeechToTextWithAmiVoice.SettingsPrefWindow"
        x:DataType="vm:SettingsPrefViewModel"
        Title="Connection Settings"
        Width="760"
        Height="420">
  <Border Margin="12">
    <DockPanel LastChildFill="True">
      <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0" Spacing="12">
        <Button Width="120" Height="32" Command="{Binding SaveCommand}">Save</Button>
        <Button Width="120" Height="32" Command="{Binding CancelCommand}">Cancel</Button>
      </StackPanel>

      <StackPanel Spacing="8">
        <TextBlock FontSize="18" FontWeight="Bold">AmiVoice Connection</TextBlock>
        <TextBlock>WebSocket URI</TextBlock>
        <TextBox Text="{Binding WebSocketUri, Mode=TwoWay}" />

        <TextBlock>API Key</TextBlock>
        <TextBox Text="{Binding ApiKey, Mode=TwoWay}" />

        <TextBlock Margin="0,8,0,0" FontSize="16" FontWeight="Bold">Output: HTTP POST</TextBlock>
        <TextBlock>HTTP POST URI</TextBlock>
        <TextBox Text="{Binding HttpPostUri, Mode=TwoWay}" />

        <TextBlock Margin="0,8,0,0" FontSize="16" FontWeight="Bold">Output: Bouyomi-chan</TextBlock>
        <Grid ColumnDefinitions="2*,120,*" RowDefinitions="Auto,Auto,Auto,Auto">
          <TextBlock Grid.Row="0" Grid.Column="0">Host</TextBlock>
          <TextBox Grid.Row="0" Grid.Column="0" Margin="80,0,8,0" Text="{Binding BouyomiHost, Mode=TwoWay}" />

          <TextBlock Grid.Row="0" Grid.Column="1" Margin="8,0,0,0">Port</TextBlock>
          <TextBox Grid.Row="0" Grid.Column="2" Margin="8,0,0,0" Text="{Binding BouyomiPort, Mode=TwoWay}" />

          <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,8,0,0">Prefix</TextBlock>
          <TextBox Grid.Row="1" Grid.Column="0" Margin="80,8,8,0" Text="{Binding BouyomiPrefix, Mode=TwoWay}" />

          <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,8,0,0">Voice</TextBlock>
          <ComboBox Grid.Row="2" Grid.Column="0"
                    Margin="80,8,8,0"
                    ItemsSource="{Binding BouyomiVoiceItems}"
                    SelectedItem="{Binding SelectedVoice}"
                    HorizontalAlignment="Stretch">
            <ComboBox.ItemTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Name}" />
              </DataTemplate>
            </ComboBox.ItemTemplate>
          </ComboBox>
        </Grid>

        <TextBlock Margin="0,8,0,0" Text="{Binding StatusText}" />
      </StackPanel>
    </DockPanel>
  </Border>
</Window>
