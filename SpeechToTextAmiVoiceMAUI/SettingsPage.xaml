<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeechToTextAmiVoiceMAUI.SettingsPage"
             Title="Connection Settings">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="10">
            <Label Text="AmiVoice Connection" FontAttributes="Bold" FontSize="18" />

            <Entry Placeholder="WebSocket URI"
                   Text="{Binding WebSocketUri}" />

            <Entry Placeholder="API Key"
                   Text="{Binding ApiKey}" />

            <Label Text="Output: HTTP POST" FontAttributes="Bold" FontSize="18" Margin="0,8,0,0" />

            <Entry Placeholder="HTTP POST URI"
                   Text="{Binding HttpPostUri}" />

            <Label Text="Output: Bouyomi-chan" FontAttributes="Bold" FontSize="18" Margin="0,8,0,0" />

            <Entry Placeholder="Bouyomi Host"
                   Text="{Binding BouyomiHost}" />

            <Entry Placeholder="Bouyomi Port"
                   Keyboard="Numeric"
                   Text="{Binding BouyomiPort}" />

            <Entry Placeholder="Bouyomi Prefix"
                   Text="{Binding BouyomiPrefix}" />

            <Picker Title="Bouyomi Voice"
                    ItemsSource="{Binding BouyomiVoiceItems}"
                    SelectedItem="{Binding SelectedBouyomiVoice}"
                    ItemDisplayBinding="{Binding Name}" />

            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    FontAttributes="Bold"
                    HeightRequest="44"
                    Margin="0,8,0,0" />

            <Button Text="Cancel"
                    Command="{Binding CancelCommand}"
                    HeightRequest="44" />

            <Label Text="{Binding StatusText}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
